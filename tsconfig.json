{
  "compilerOptions": {
    // This specifies the ECMAScript target version. "es5" is widely compatible with many browsers.
    "target": "es5",
    // This includes type definitions from these libraries.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // This allows JavaScript files to be compiled.
    "allowJs": true,
    // This skips type checking of declaration files.
    "skipLibCheck": true,
    // This enables all strict type checking options.
    "strict": true,
    // This enforces consistent casing in file names.
    "forceConsistentCasingInFileNames": true,
    // This prevents emitting output files.
    "noEmit": true,
    // This enables compatibility between CommonJS and ES Modules via creation of namespace objects for all imports.
    "esModuleInterop": true,
    // This specifies the module system for the project. "esnext" uses the latest module system.
    "module": "esnext",
    // This sets the module resolution strategy to node.
    "moduleResolution": "node",
    // This allows importing JSON modules.
    "resolveJsonModule": true,
    // This ensures every file is a separate module.
    "isolatedModules": true,
    // This specifies JSX code generation. "preserve" keeps the JSX as part of the output to be further consumed by the bundler.
    "jsx": "preserve",
    // This enables incremental compilation by storing information about the project graph from the last compilation.
    "incremental": true,
    // This specifies TypeScript plugins to use.
    "plugins": [
      {
        "name": "next"
      }
    ],
    // This maps import paths to different locations. Here, it's mapping any import that starts with "@" to the "src" directory.
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  // This specifies which files TypeScript should include in its checks.
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./**/*.d.ts"
  ],
  // This specifies which files TypeScript should exclude from its checks.
  "exclude": [
    "node_modules"
  ],

  "types": [
    "jest"
  ]
}